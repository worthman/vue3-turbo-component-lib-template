{
  // 继承 Vite 配置
  "extends": "@worthman/typescript-config/vite.json",
  "compilerOptions": {
    // 移除 .d.ts.map 文件映射
    "declarationMap": false,
    // JSX 保留模式
    "jsx": "preserve",
    // 包含的库文件
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    // 使用 Bundler 模块解析策略
    "moduleResolution": "bundler",
    // 跳过对声明文件的类型检查
    "skipLibCheck": true,
    // 基础路径
    "baseUrl": ".",
    // 路径映射
    "paths": {
      "~/*": ["src/*"]
    }
  },
  // 包含的文件路径
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  // 排除的文件路径
  "exclude": ["src/types/global.d.ts"]
}
